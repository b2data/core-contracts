{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": [
    "wrappers/*", 
    "index.ts", 
    "wrappers/utils/jetton.ts",
    "tests/**/*",
    "jest.setup.ts",
    "types/**/*"
  ]
}
